<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="serverLogsFilepath">$${log4j:configParentLocation}/logs/</Property>
        <Property name="pattern">%m%n</Property>
<!--        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} - %-5p: [%t] %c{}:\n%m%n</Property>-->
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
        <RollingFile
                name="SERVER_LOGS_FILE"
                fileName="${serverLogsFilepath}/log.txt"
                filePattern="${serverLogsFilepath}/periodicals.%d{yyyy-MM-dd}-%i.log.gz"
                ignoreExceptions="false">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="SERVER_LOGS_FILE"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="com.gmail.maxsvynarchuk" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
    </Loggers>
</Configuration>